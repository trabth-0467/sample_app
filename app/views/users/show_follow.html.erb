<%= provide :title, @title %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <%= gravatar_for @user %>
      <h1><%= @user.name %></h1>
      <span><%= link_to t("view_profile"), @user %></span>
      <span><b><%= t "microposts" %></b></span>
      <span><%= @user.microposts.count %></span>
    </section>
  </aside>
  <section class="stats">
    <%= render "shared/stats" %>
    <div class="user_avatars">
      <% if @users.any? %>
        <% @users.each do |user| %>
          <%= link_to gravatar_for(user, size: Settings.user.avatar.gravatar_size_small), user %>
        <% end %>
      <% end %>
    </div>
  </section>
  <div class="col-md-8">
    <h3><%= @title %></h3>
    <% if @users.any? %>
      <ul class="users follow">
        <%= render @users %>
      </ul>
      <%= pagy_nav(@pagy) if @users.any? %>
    <% end %>
  </div>
</div>
